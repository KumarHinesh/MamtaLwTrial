<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_marginTop="15dp"
        android:id="@+id/et_getInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_getInput"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_input_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_pink_small"
            android:text="ok (G han)"
            />


        <Button
            android:id="@+id/btn_input_dialog_cancel"
            android:layout_below="@+id/et_getInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel (Nahi)"
            android:background="@drawable/button_white_small"
            />


    </LinearLayout>



</RelativeLayout>