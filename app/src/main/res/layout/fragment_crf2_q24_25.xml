<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.crf2_fragments.Crf2Q24_25Fragment">


    <LinearLayout
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:textSize="20sp"
                android:layout_weight="1.3"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" Date of death of child \n (Bachay k marny k tareekh)"
                />

            <TextView
                android:id="@+id/tv_DODGetDate"
                android:textSize="20sp"
                android:drawableLeft="@mipmap/calendar"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1.3"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text=" Time of death of child \n (Bachay k marny  ka waqt)"
                />

            <TextView
                android:id="@+id/tv_DOD_timeepicker"
                android:textSize="20sp"
                android:drawableLeft="@mipmap/time"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Time"
                />


        </LinearLayout>


        <Button
            android:id="@+id/btn_Q24_submit"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:text="Submit"
            android:textStyle="bold"
            android:background="@drawable/button_shape_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>




</RelativeLayout>