<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.crf2_fragments.CRF2GetBabyBirthDateAndTimeFragment">

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Of Birth And Time OF Baby "
        />




    <LinearLayout
        android:id="@+id/ll_tem"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:textSize="20sp"
                android:layout_weight="1.3"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" Date of birth of child \n (Bachay k paiday honay k tareekh)"
                />

            <TextView
                android:id="@+id/tv_DOBGetDate"
                android:textSize="20sp"
                android:drawableLeft="@mipmap/calendar"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Date"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_weight="1.3"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:text=" Time of birth of child \n (Bachay k paiday honay ka waqt)"
                />

            <TextView
                android:id="@+id/tv_DOB_timeepicker"
                android:textSize="20sp"
                android:drawableLeft="@mipmap/time"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Time"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:weightSum="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:textSize="20sp"
                android:layout_weight="1.3"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=" Baby currently alive  \n (Kya bacha abhi zainda ha)"
                />

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:weightSum="2"
                android:layout_height="wrap_content">



                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"/>

                        <CheckBox
                            android:id="@+id/cb_DOB_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                    <LinearLayout

                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"/>

                        <CheckBox
                            android:id="@+id/cb_DOB_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>




            </LinearLayout>



        </LinearLayout>




    </LinearLayout>


    <Button
        android:id="@+id/btn_DOB_next"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_tem"
        android:drawablePadding="-50dp"
        android:textColor="@color/white"
        android:drawableRight="@mipmap/ic_navigate_next_white_48dp"
        android:text="Next"
        android:background="@drawable/button_shape_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />





</RelativeLayout>